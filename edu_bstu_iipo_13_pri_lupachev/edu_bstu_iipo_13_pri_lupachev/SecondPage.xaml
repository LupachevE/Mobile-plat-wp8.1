<Page
    x:Class="edu_bstu_iipo_13_pri_lupachev.SecondPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:edu_bstu_iipo_13_pri_lupachev"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="Black">
    <Page.BottomAppBar>
        <CommandBar IsSticky="True" x:Name="appBar" Height="20">
            <CommandBar.SecondaryCommands>
                <AppBarButton Label="Переход на страницу 1" Click="AppBarButton_Click"/>
            </CommandBar.SecondaryCommands>
        </CommandBar>
    </Page.BottomAppBar>
    <Grid>
        <Grid Opacity="0.6">
            <Grid.Background>
                <ImageBrush ImageSource="./Assets/SplashScreen.scale-100.png"/>
            </Grid.Background>
        </Grid>

        <TextBlock x:Name="textBlock" Style="{StaticResource TextBlockMedium}" HorizontalAlignment="Left" Margin="28,54,0,0" TextWrapping="Wrap" Text="Second Page" VerticalAlignment="Top" Height="36" Width="341"/>
    </Grid>
</Page>
