<Page
    x:Class="edu_bstu_iipo_13_pri_lupachev.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:edu_bstu_iipo_13_pri_lupachev"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:system="http://schemas.microsoft.com/winfx/2006/xaml"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Page.BottomAppBar>
        <CommandBar IsSticky="True" x:Name="appBar" Height="20">
            <CommandBar.SecondaryCommands>
                <AppBarButton x:ConnectionId='1' Label="Переход на страницу 2"                           />
            </CommandBar.SecondaryCommands>
        </CommandBar>
    </Page.BottomAppBar>
    <Grid>
        <Button x:ConnectionId='2' x:Name="callButton" Content="Набрать студента" HorizontalAlignment="Center" Margin="113,0,113,43" VerticalAlignment="Bottom"                     />
        <TextBlock x:Name="familyLabel" FontSize="20" HorizontalAlignment="Left" Margin="20,40,0,0" TextWrapping="Wrap" Text="Фамилия" VerticalAlignment="Top"/>
        <TextBlock x:Name="nameLabel" FontSize="20" HorizontalAlignment="Left" Margin="20,80,0,0" TextWrapping="Wrap" Text="Имя" VerticalAlignment="Top"/>
        <TextBlock x:Name="groupLabel" FontSize="20" HorizontalAlignment="Left" Margin="20,120,0,0" TextWrapping="Wrap" Text="Группа" VerticalAlignment="Top"/>
        <TextBlock x:Name="emailLabel" FontSize="20" HorizontalAlignment="Left" Margin="20,160,0,0" TextWrapping="Wrap" Text="E-mail" VerticalAlignment="Top"/>
        <TextBlock x:Name="numberLabel" FontSize="20" HorizontalAlignment="Left" Margin="20,200,0,0" TextWrapping="Wrap" Text="Номер" VerticalAlignment="Top"/>
        <TextBlock x:Name="familyValue" FontSize="20" HorizontalAlignment="Right" Margin="0,40,20,0" TextWrapping="Wrap" Text="{StaticResource Family}" VerticalAlignment="Top"/>
        <TextBlock x:Name="nameValue" FontSize="20" HorizontalAlignment="Right" Margin="0,80,20,0" TextWrapping="Wrap" Text="{StaticResource  Name}" VerticalAlignment="Top"/>
        <TextBlock x:Name="groupValue" FontSize="20" HorizontalAlignment="Right" Margin="0,120,20,0" TextWrapping="Wrap" Text="{StaticResource Group}" VerticalAlignment="Top"/>
        <TextBlock x:ConnectionId='3' x:Name="emailValue" FontSize="20" HorizontalAlignment="Right" Margin="0,160,20,0" TextWrapping="Wrap" Text="{StaticResource E-mail}" VerticalAlignment="Top"                           />
        <TextBlock x:ConnectionId='4' x:Name="numberValue" FontSize="20" HorizontalAlignment="Right" Margin="0,200,20,0" TextWrapping="Wrap" Text="{StaticResource Number}" VerticalAlignment="Top"                            />
        <TextBox x:ConnectionId='5' x:Name="inputTextBox" HorizontalAlignment="Center" Margin="20,0,20,218" TextWrapping="Wrap" Text="Введите номер" VerticalAlignment="Bottom" Width="360"                                                           InputScope="TelephoneNumber"/>
    </Grid>
</Page>

