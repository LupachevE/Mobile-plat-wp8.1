<Page
    x:Class="edu_bstu_iipo_13_pri_lupachev.SecondPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:edu_bstu_iipo_13_pri_lupachev"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">
    <Page.Background>
    <ImageBrush ImageSource="./Assets/SplashScreen.scale-100.png"/>
    </Page.Background>
    <Page.BottomAppBar>
        <CommandBar IsSticky="True" x:Name="appBar" Height="20">
            <CommandBar.SecondaryCommands>
                <AppBarButton x:ConnectionId='1' Label="Переход на страницу 2"                           />
            </CommandBar.SecondaryCommands>
        </CommandBar>
    </Page.BottomAppBar>
    <Grid>
        <TextBlock x:Name="textBlock" Style="{StaticResource TextBlockMedium}" HorizontalAlignment="Left" Margin="28,54,0,0" TextWrapping="Wrap" Text="Second Page" VerticalAlignment="Top" Height="36" Width="341"/>

    </Grid>
</Page>

